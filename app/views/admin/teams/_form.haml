= form_for([:admin, @team]) do |f|
  - if @team.errors.any?
    #error_explanation
      %h2
        = pluralize(@team.errors.count, "error")
        prohibited this team from being saved:
      %ul
        - @team.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :name
    %br
      = f.text_field :name
  .field
    = f.label :history
    %br
      = f.text_area :history
  .field
    = f.label :situation_description
    %br
      = f.text_area :situation_description
  .field
    = f.label :user_id
    %br
      = select("team", "user_id", User.all.collect {|u| [ u.full_name, u.id ] })
  .actions
    = f.submit