%h1 Listing badges
%table#teams_table{cellpadding: "0", cellspacing:"0", border: "0", class: "datatable table table-striped table-bordered"}
  %thead
    %tr
      %th Kolor
      %th Nazwa
      %th Opis
      %th Wymagania
      %th Komentarze
      %th Emblemat
      %th
      %th
      %th
  %tbody
    - @badges.each do |badge|
      %tr{id: "j-#{badge.id}"}
        %td{class: "bgn-#{badge.color}"}
        %td= badge.name
        %td= badge.description
        %td
          -badge.requirement_names.each do |name|
            =name
        %td= badge.comment
        %td= image_tag badge.emblem.url(:thumb)
        %td= link_to 'Show', [:admin, badge]
        %td= link_to 'Edit', edit_admin_badge_path(badge)
        %td= link_to 'Destroy', [:admin, badge], method: :delete, data: { confirm: 'Are you sure?' }
%br
  = link_to 'New Badge', new_admin_badge_path