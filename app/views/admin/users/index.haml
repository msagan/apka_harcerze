%h1 Listing users
%table#users_table{cellpadding: "0", cellspacing:"0", border: "0", class: "datatable table table-striped table-bordered"}
  %thead
    %tr
      %th First name
      %th Last name
      %th Stars
      %th Badges
      %th Description
      %th Pesel
      %th Address 1
      %th Address 2
      %th School
      %th School class
      %th Parental agreement
      %th Medical info
      %th Team
      %th
      %th
      %th
  %tbody
    - @users.each do |user|
      %tr{id: "j-#{user.id}"}
        %td= user.first_name
        %td= user.last_name
        %td= user.stars
        %td
          -user.badges_names.each do |name|
            =name
        %td= user.description
        %td= user.pesel
        %td= user.address_1
        %td= user.address_2
        %td= user.school
        %td= user.school_class
        %td= user.parental_agreement
        %td= user.medical_info
        %td
          -if user.team.present?
            = user.team.name
        %td= link_to 'Show', [:admin, user]
        %td= link_to 'Edit', edit_admin_user_path(user)
        %td= link_to 'Destroy', [:admin, user], method: :delete, data: { confirm: 'Are you sure?' }
%br
  = link_to 'New User', new_admin_user_path