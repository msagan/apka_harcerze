= form_for([:admin, @user]) do |f|
  - if @user.errors.any?
    #error_explanation
      %h2
        = pluralize(@user.errors.count, "error")
        prohibited this user from being saved:
      %ul
        - @user.errors.full_messages.each do |msg|
          %li= msg
  .form-inputs.form-horizontal
    .form-group.col-sm-12
      = f.label :first_name, class: "col-sm-2 control-label"
      .col-sm-4
        = f.text_field :first_name, class: 'form-control'
    .form-group.col-sm-12
      = f.label :last_name, class: "col-sm-2 control-label"
      .col-sm-4
        = f.text_field :last_name, class: 'form-control'
    .form-group.col-sm-12
      = f.label :email, class: "col-sm-2 control-label"
      .col-sm-4
        = f.text_field :email, class: 'form-control'
    .form-group.col-sm-12
      = f.label :stars, class: "col-sm-2 control-label"
      .col-sm-4
        = f.number_field :stars, class: 'form-control'
    .form-group.col-sm-12
      = f.label :description, class: "col-sm-2 control-label"
      .col-sm-4
        = f.text_area :description, class: 'form-control'
    .form-group.col-sm-12
      = f.label :pesel, class: "col-sm-2 control-label"
      .col-sm-4
        = f.number_field :pesel, class: 'form-control'
    .form-group.col-sm-12
      = f.label :address_1, class: "col-sm-2 control-label"
      .col-sm-4
        = f.text_field :address_1, class: 'form-control'
    .form-group.col-sm-12
      = f.label :address_2, class: "col-sm-2 control-label"
      .col-sm-4
        = f.text_field :address_2, class: 'form-control'
    .form-group.col-sm-12
      = f.label :school, class: "col-sm-2 control-label"
      .col-sm-4
        = f.text_field :school, class: 'form-control'
    .form-group.col-sm-12
      = f.label :school_class, class: "col-sm-2 control-label"
      .col-sm-4
        = f.text_field :school_class, class: 'form-control'
    .form-group.col-sm-12
      = f.label :parental_agreement, class: "col-sm-2 control-label"
      .col-sm-4
        = f.check_box :parental_agreement
    .form-group.col-sm-12
      = f.label :medical_info, class: "col-sm-2 control-label"
      .col-sm-4
        = f.text_area :medical_info, class: 'form-control'
    .form-group.col-sm-12
      = f.label :team_id, class: "col-sm-2 control-label"
      .col-sm-4
        = select("user", "team_id", Team.all.collect {|t| [ t.name, t.id ] }, { include_blank: true })
    .actions
      = f.submit