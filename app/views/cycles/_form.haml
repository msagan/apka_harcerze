= form_for @cycle, url: create_cycle_path(@year_plan) do |f|
  .form-inputs.form-horizontal
    .form-group.col-sm-12
      = f.label 'Nazwa cyklu', class: "col-sm-2 control-label"
      .col-sm-6
        = f.text_field :name, class: "form-control", required: true
    .form-group.col-sm-12
      = f.label 'Data początku', class: "col-sm-2 control-label"
      .col-sm-6
        = f.datetime_field :start_date, class: "form-control datetimepicker", required: true
    .form-group.col-sm-12
      = f.label 'Data końca', class: "col-sm-2 control-label"
      .col-sm-6
        = f.datetime_field :stop_date, class: "form-control datetimepicker", required: true
    .form-group.col-sm-12.margin-left-md
      .col-sm-6
        -@badges.each do |badge|
          .col-sm-2
            = f.label badge.name
            = f.check_box :badge_ids, { :multiple => true, class: 'form-control' }, badge.id, nil
    .form-actions
      .form-group
        .col-sm-2.col-md-offset-3
          = f.submit 'Zapisz'
