= form_for @cycle, url: create_cycle_path(@year_plan) do |f|
  .form-inputs.form-horizontal
    .form-group.col-sm-12
      = f.label :name, class: "col-sm-2 control-label"
      .col-sm-6
        = f.text_field :name, class: "form-control", required: true
    .form-group.col-sm-12
      = f.label :start_date, class: "col-sm-2 control-label"
      .col-sm-6
        = f.datetime_field :start_date, class: "form-control datetimepicker", required: true
    .form-group.col-sm-12
      = f.label :stop_date, class: "col-sm-2 control-label"
      .col-sm-6
        = f.datetime_field :stop_date, class: "form-control datetimepicker", required: true
    .form-group.col-sm-12.margin-left-md
      = f.label :team_id, class: 'pull-left'
      .col-sm-6
        =select("cycle", "team_id", Team.all.collect {|t| [ t.name, t.id ] }, { include_blank: true, class: "pull-left" })
    .form-actions
      .form-group
        .col-sm-2.col-md-offset-3
          = f.submit 'Zapisz'
